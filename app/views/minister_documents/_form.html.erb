<div class="col-lg-12">
    <div class="card bg-light">
        <div class="card-body ">
           <div class="mt-5 mt-lg-4">

<%= form_with(model: minister_document) do |form| %>
  <% if minister_document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(minister_document.errors.count, "error") %> prohibited this minister_document from being saved:</h2>

      <ul>
        <% minister_document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="mb-2 row">
    <%= form.label :sender, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-8">
          <%= form.text_field :sender, class:"form-control" %>
        </div>
        <div class="col-sm-4">
          <%= form.select :document_source, MinisterDocument.document_sources.keys.map {|document_source| [document_source.humanize, document_source]},{}, {class:"form-select"} %>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-2 row">
    <%= form.label :subject, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-4">
        <%= form.text_field :subject, class:"form-control" %>
    </div>
  </div>

     <div class="mb-2 row">
      <%= form.label :reference_number, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-3">
          <%= form.text_field :reference_number, class:"form-control" %>
      </div>
    </div>

    <div class="mb-2 row">
      <%= form.label :priority, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-3">
        <%= form.select :priority, MinisterDocument.priorities.keys.map {|priority| [priority.humanize, priority]},{}, {class:"form-select"} %>
      </div>
    </div>

    <div class="mb-2 row">
      <%= form.label :category, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-3">
      <%= form.select :category, MinisterDocument.categories.keys.map {|category| [category.humanize, category]},{}, {class:"form-select"} %>
      </div>
    </div>

    <div class="mb-2 row">
      <%= form.label :attachment_document, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-3">
      <%= form.file_field :attachment_document %>
      </div>
    </div>
      <%#= form.hidden_field :constitutional_government_id, value:@constitutional_government_id.id  %>
          <div>
  
  <div class="mb-1 row">
    <div class="col-sm-2"></div>
        <div class="col-sm-4">
      <%= button_tag  class: " btn btn-sm btn-outline-secondary menu-hover" do %><i class="bi bi-check2-square"></i> Submit<% end %>
      <%= link_to minister_documents_path, class:" btn btn-sm btn-outline-secondary menu-hover" do %><i class="bi bi-backspace-fill"></i> Cancel<% end %>
    </div>
  </div>
<% end %>


          </div>  
        </div>  
    </div>  
  </div>