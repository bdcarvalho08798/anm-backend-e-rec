

<div class="container mt-2">
<div class="d-flex justify-content-center " >

<div class="card bg-light mb-3" style="max-width: 540px;">

  <div class="row g-0">
  <%= render 'layouts/login_header' %>

    <div class="col-sm-4 ">
      <img src="../doc.png" style="height:100%;" class="img-fluid rounded-start img-thumbnail" alt="...">
    </div>
    <div class="col-sm-8">
      
      <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3 mt-3">
              <label for="email">Email:</label>
               <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
            <div class="mb-3">
              <label for="pwd">Password:</label>
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
            </div>
            
             <%= f.submit "Log in", class:"btn btn-secondary menu-hover float-end"%>
          <% end %>
  <div class="mt-4"> 
  <br>        
  <%#= render "devise/shared/links" %>
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>
