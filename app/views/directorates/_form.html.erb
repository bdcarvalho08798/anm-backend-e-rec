    <div class="card bg-secondary-subtle">
        <div class="card-body ">
           <div class="mt-5 mt-lg-4">

                <%= form_with(model: directorate) do |form| %>
                  <% if directorate.errors.any? %>
                    <div style="color: red">
                      <h2><%= pluralize(directorate.errors.count, "error") %> prohibited this directorate from being saved:</h2>

                      <ul>
