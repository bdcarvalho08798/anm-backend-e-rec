

<div class="card mt-1">
  <div class="card-header">
    <h5>Recent Document From DG</h5>
  </div>
  <div class="card-body">
    <table class="table table-sm table-hover">
    <thead>
        <tr>
        <th scope="col">Sender</th>
        <th scope="col">Subject</th>
        <th scope="col">Reference number</th>
        <th scope="col">status</th>
        <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    <% @document_from_dgs.each do |document_from_dg| %>
        <tr>
        
            <td class="w-25"><%= document_from_dg.sender %></td>
            <td class="w-25"><%= document_from_dg.subject %></td>
            <td><%= document_from_dg.reference_number %></td>
            <% @sts =  document_from_dg.status.to_i %>
            <% if @sts == 0 %>
                <% @status = "<span class='badge rounded-pill bg-danger'>Pending</span>".html_safe %>
            <% elsif @sts == 100 %>
                <% @status = "<span class='badge rounded-pill bg-success'>Completed</span>".html_safe %>
            <% else %>
                <% @status = "<span class='badge rounded-pill bg-warning'>On Progress</span>".html_safe %>
            <% end %>
            <td><%= @status %></td>
            <td> <%= link_to "View", document_from_dg_path(document_from_dg), class:"btn btn-sm btn-outline-primary" %></td>
      
        </tr>
  <% end %>
    </tbody>
    </table>
    </div>
</div>





